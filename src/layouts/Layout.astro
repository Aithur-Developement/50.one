export interface Props {
  title?: string;
  description?: string;
  navigation?: string;
}
const resolvedImageWithDomain = new URL(
  "/poster.png",
  Astro.url.origin
).toString();

const { title , description} = Astro.props;

const makeTitle = title ? title : "50.one â€“ Architecture That Inspires & Endures | Spaces for People, Places for Life";
const makeDes = description ? description : "At 50.one, we transform imagination into form and complexity into clarity. Our architecture is crafted to inspire, endure, and reflect its context. Through exploration, collaboration, and timeless vision, we design meaningful spaces for people and places for life.";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <SEO title={makeTitle}
            description={makeDes}
            twitter={{
            creator: "@surjithctly",
            site: "@web3templates",
            card: "summary_large_image",
          }}
          openGraph={{
            basic: {
              type: "website",
              title: makeTitle,
              image: resolvedImageWithDomain,
            },

            image: {
              alt: makeTitle,
          },
        }}
        />
    </head>
    <body> 
      <slot/>
      <Scrollbar client:load/>
    </body>
</html>


